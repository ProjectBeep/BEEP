<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Beep" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Beep" parent="NightAdjusted.Theme.Beep">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.BEEP" parent="PlatformAdjusted.Theme.Beep" />

    <style name="Theme.BEEP.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/beep_pink</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.BEEP</item>
    </style>
</resources>