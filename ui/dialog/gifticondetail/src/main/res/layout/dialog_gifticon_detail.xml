<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black_30">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_content"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="15dp"
        android:foreground="@drawable/fg_gifticon_content">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_header"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/container_body"
            android:background="@drawable/bg_gifticon_header">
            
            <ImageView
                android:id="@+id/image_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@null"/>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_check"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/image_thumbnail"
                app:layout_constraintEnd_toEndOf="@id/image_thumbnail"
                app:layout_constraintTop_toTopOf="@id/image_thumbnail"
                app:layout_constraintBottom_toBottomOf="@id/image_thumbnail"
                android:backgroundTint="@color/gray_50"
                android:background="@drawable/bg_oval">
                
                <ImageView
                    android:id="@+id/icon_check"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/text_check"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_check" />

                <TextView
                    android:id="@+id/text_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon_check"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAppearance="@style/Text.Title7"
                    android:textColor="@color/white"
                    tools:text="@string/dialog_gifticon_detail_thumbnail_used"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/dialog_gifticon_detail_close_content_description"
                android:src="@drawable/icon_gifticon_detail_close"/>


            <TextView
                android:id="@+id/text_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/image_thumbnail"
                app:layout_constraintBottom_toTopOf="@id/text_name"
                app:layout_constraintStart_toEndOf="@id/image_thumbnail"
                app:layout_constraintEnd_toStartOf="@id/btn_close"
                android:textAppearance="@style/Text.Body3"
                android:textColor="@color/medium_pink"
                tools:text="설빙"/>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="@id/text_brand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_brand"
                app:layout_constraintBottom_toTopOf="@id/btn_edit"
                android:textAppearance="@style/Text.Title4"
                android:textColor="@color/font_dark_gray"
                tools:text="딸기마카롱설빙딸기마카롱설빙딸기마카롱설빙딸기마카롱설빙딸기마카롱설빙"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/text_brand"
                app:layout_constraintTop_toBottomOf="@id/text_name"
                app:layout_constraintBottom_toBottomOf="@id/image_thumbnail">

                <TextView
                    android:id="@+id/text_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/icon_edit"
                    android:includeFontPadding="false"
                    android:textAppearance="@style/Text.Body3"
                    android:textColor="@color/medium_gray"
                    android:text="@string/dialog_gifticon_detail_edit"/>

                <ImageView
                    android:id="@+id/icon_edit"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@null"
                    app:tint="@color/medium_gray"
                    android:src="@drawable/icon_edit"
                    tools:tint="@color/medium_gray"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_gifticon_body">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_cash"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:constraint_referenced_ids="text_total_cash,text_total_cash_label,text_remain_cash,text_remain_cash_label"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/text_total_cash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="54dp"
                android:minHeight="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textAppearance="@style/Text.Body5"
                android:textColor="@color/blue"
                android:text="@string/dialog_gifticon_detail_total_cash"
                android:background="@drawable/bg_gifticon_detail_label"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_horizontal_center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_percent="0.5"/>

            <TextView
                android:id="@+id/text_remain_cash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="54dp"
                android:minHeight="24dp"
                app:layout_constraintTop_toTopOf="@id/text_total_cash_label"
                app:layout_constraintStart_toStartOf="@id/guide_horizontal_center"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textAppearance="@style/Text.Body5"
                android:textColor="@color/blue"
                android:text="@string/dialog_gifticon_detail_remain_cash"
                android:background="@drawable/bg_gifticon_detail_label"/>

            <TextView
                android:id="@+id/text_expire_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="54dp"
                android:minHeight="24dp"
                android:layout_marginTop="8dp"
                app:layout_goneMarginTop="20dp"
                app:layout_goneMarginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/text_total_cash_label"
                app:layout_constraintStart_toStartOf="@id/text_total_cash_label"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textAppearance="@style/Text.Body5"
                android:textColor="@color/blue"
                android:text="@string/dialog_gifticon_detail_expire"
                android:background="@drawable/bg_gifticon_detail_label"/>

            <TextView
                android:id="@+id/text_memo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="54dp"
                android:minHeight="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_expire"
                app:layout_constraintStart_toStartOf="@id/text_expire_label"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textAppearance="@style/Text.Body5"
                android:textColor="@color/blue"
                android:text="@string/dialog_gifticon_detail_memo"
                android:background="@drawable/bg_gifticon_detail_label"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="end"
                app:constraint_referenced_ids="text_total_cash_label,text_expire_label,text_memo_label"/>

            <TextView
                android:id="@+id/text_total_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/text_total_cash_label"
                app:layout_constraintBottom_toBottomOf="@id/text_total_cash_label"
                app:layout_constraintStart_toStartOf="@id/barrier"
                android:includeFontPadding="false"
                android:textAppearance="@style/Text.Body1"
                android:textColor="@color/font_dark_gray"
                tools:text="10,000원"/>

            <TextView
                android:id="@+id/text_remain_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/text_remain_cash_label"
                app:layout_constraintBottom_toBottomOf="@id/text_remain_cash_label"
                app:layout_constraintStart_toEndOf="@id/text_remain_cash_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:textAppearance="@style/Text.Body1"
                android:textColor="@color/font_dark_gray"
                tools:text="10,000원"/>

            <TextView
                android:id="@+id/text_expire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/text_expire_label"
                app:layout_constraintBottom_toBottomOf="@id/text_expire_label"
                app:layout_constraintStart_toStartOf="@id/barrier"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:textAppearance="@style/Text.Body1"
                android:textColor="@color/font_dark_gray"
                tools:text="2023-12-11"/>

            <TextView
                android:id="@+id/text_memo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/text_memo_label"
                app:layout_constraintBottom_toBottomOf="@id/text_memo_label"
                app:layout_constraintStart_toStartOf="@id/barrier"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/Text.Body3"
                android:textColor="@color/font_gray"
                tools:text="예진이가 사준 생일선물!!"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/text_memo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/image_barcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="28dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/text_barcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="48dp"
                    app:layout_constraintTop_toBottomOf="@id/image_barcode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_default="wrap"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:textAppearance="@style/Text.Body3"
                    android:textColor="@color/font_dark_gray"
                    tools:text="1116 2725 6370 1116"/>

                <ImageView
                    android:id="@+id/icon_barcode_copy"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="-12dp"
                    app:layout_constraintTop_toTopOf="@id/text_barcode"
                    app:layout_constraintBottom_toBottomOf="@id/text_barcode"
                    app:layout_constraintStart_toEndOf="@id/text_barcode"
                    android:contentDescription="@string/dialog_gifticon_detail_barcode_copy_description"
                    android:src="@drawable/icon_copy"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/container_barcode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_use_and_revert"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:textAppearance="@style/Text.Title7"
                android:textColor="@color/medium_gray"
                android:backgroundTint="@color/light_gray"
                android:background="@drawable/bg_rect_r16"
                tools:text="@string/dialog_gifticon_detail_delete"/>

            <TextView
                android:id="@+id/btn_use_and_revert"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/btn_delete"
                app:layout_constraintBottom_toBottomOf="@id/btn_delete"
                app:layout_constraintStart_toEndOf="@id/btn_delete"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:textAppearance="@style/Text.Title7"
                android:textColor="@color/white"
                android:backgroundTint="@color/beep_pink"
                android:background="@drawable/bg_rect_r16"
                tools:text="@string/dialog_gifticon_detail_use"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>