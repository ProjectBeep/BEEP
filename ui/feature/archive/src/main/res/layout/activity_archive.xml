<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:tint="@color/font_dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/archive_back_content_description"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/Text.Title2"
            android:textColor="@color/font_dark_gray"
            android:text="@string/archive_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_used_gifticon_count"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/text_used_gifticon_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/guide_used_gifticon_bottom"
        android:textAppearance="@style/Text.Title1"
        android:textColor="@color/beep_pink"
        tools:text="4"/>

    <TextView
        android:id="@+id/text_used_gifticon_count_postfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_used_gifticon_count"
        app:layout_constraintTop_toTopOf="@id/text_used_gifticon_count"
        app:layout_constraintBottom_toBottomOf="@id/text_used_gifticon_count"
        android:textAppearance="@style/Text.Title1"
        android:textColor="@color/font_dark_gray"
        android:text="@string/archive_used_gifticon_count"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/text_used_gifticon_count"
        app:layout_constraintBottom_toBottomOf="@id/text_used_gifticon_count"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/Text.Title4"
            android:textColor="@color/medium_gray"
            android:text="@string/archive_edit_gifticon"/>

        <ImageView
            android:id="@+id/icon_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/text_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/medium_gray"
            android:contentDescription="@null"
            android:src="@drawable/icon_edit"
            tools:tint="@color/medium_gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_used_gifticon_bottom"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_begin="108dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_used_gifticon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guide_used_gifticon_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="4dp"
        android:paddingHorizontal="15.5dp"
        android:paddingBottom="56dp"
        android:clipToPadding="false"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_used_gifticon"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_edit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_use"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textAppearance="@style/Text.Title4"
            android:textColor="@color/medium_gray"
            android:text="@string/archive_delete_gifticon"
            android:backgroundTint="@color/light_gray"
            android:background="@drawable/bg_rect_r16"/>

        <TextView
            android:id="@+id/btn_use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/btn_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textAppearance="@style/Text.Title4"
            android:textColor="@color/white"
            android:text="@string/archive_revert_gifticon"
            android:backgroundTint="@color/beep_pink"
            android:background="@drawable/bg_rect_r16"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>