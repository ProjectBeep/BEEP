<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_expired"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabSelectedTextAppearance="@style/Text.Title7"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/Text.Title7"
        app:tabTextColor="@color/font_medium_gray"
        app:tabRippleColor="@color/light_gray"
        app:tabIndicatorColor="@color/black"
        android:background="@drawable/bg_underline_l1_light_gray"/>
    
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tab_expired"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/Text.Title2"
        android:textColor="@color/font_dark_gray"
        android:text="@string/expired_title"/>
    
    <ImageView
        android:id="@+id/icon_title"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintStart_toEndOf="@id/text_title"
        android:contentDescription="@null"
        app:tint="@color/font_dark_gray"
        android:src="@drawable/icon_expired"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/Text.Body1"
            android:textColor="@color/font_medium_gray"
            android:text="@string/edit_gifticon"/>

        <ImageView
            android:id="@+id/icon_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/text_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/font_medium_gray"
            android:contentDescription="@null"
            android:src="@drawable/icon_edit"
            tools:tint="@color/font_medium_gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_brand"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_expired_brand_chip"/>

</androidx.constraintlayout.widget.ConstraintLayout>