<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_expired_gifticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/Text.Title5"
        android:textColor="@color/font_dark_gray"
        android:text="@string/expired_title"/>

    <ImageView
        android:id="@+id/icon_expired_gifticon"
        android:layout_width="17dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/text_expired_gifticon"
        app:layout_constraintBottom_toBottomOf="@id/text_expired_gifticon"
        app:layout_constraintStart_toEndOf="@id/text_expired_gifticon"
        android:contentDescription="@null"
        app:tint="@color/font_dark_gray"
        android:src="@drawable/icon_expired"/>

</androidx.constraintlayout.widget.ConstraintLayout>