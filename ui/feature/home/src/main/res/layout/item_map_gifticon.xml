<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="136dp"
    android:layout_height="184dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/text_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/image_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/font_dark_gray"
            android:textAppearance="@style/Text.Body1"
            tools:text="브랜드명"/>

        <TextView
            android:id="@+id/text_gifticon_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:includeFontPadding="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_brand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:lines="2"
            android:textColor="@color/font_medium_gray"
            android:textAppearance="@style/Text.Body5"
            tools:text="두줄넘어가는 텍스트를 작성해보겠습니다"/>

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAppearance="@style/Text.Body5"
            android:backgroundTint="@color/beep_pink"
            android:background="@drawable/bg_rect_rlb8"
            tools:text="000m"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>