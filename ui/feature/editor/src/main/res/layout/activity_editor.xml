<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="17dp"
            app:tint="@color/font_dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/Text.Title2"
            android:textColor="@color/font_dark_gray"
            android:text="@string/editor_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_selected"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/container_toolbar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_height="@dimen/selected_list_height"
        tools:listitem="@layout/item_editor_gifticon"/>
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/list_selected"
        app:layout_constraintBottom_toTopOf="@id/container_chip"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_gray"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container_chip"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:layout_constraintBottom_toTopOf="@id/recycler_editor">
        
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_editor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        tools:itemCount="1"/>
    
    <TextView
        android:id="@+id/btn_register"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:backgroundTint="@color/bg_editor_register"
        android:background="@drawable/bg_rect_r16"
        android:textColor="@color/white"
        android:textAppearance="@style/Text.Title5"
        tools:text="@string/editor_gifticon_register_invalid"/>

</androidx.constraintlayout.widget.ConstraintLayout>