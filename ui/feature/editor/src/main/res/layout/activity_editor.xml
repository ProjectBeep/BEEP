<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="17dp"
            app:tint="@color/font_dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/Text.Title2"
            android:textColor="@color/font_dark_gray"
            android:text="@string/editor_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_selected"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/container_toolbar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_height="@dimen/selected_list_height"
        tools:listitem="@layout/item_editor_gifticon"/>
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/list_selected"
        app:layout_constraintBottom_toTopOf="@id/list_editor_chip"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/light_gray"
        app:cardElevation="10dp">

        <ScrollView
            android:id="@+id/scroll_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_preview_start"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintGuide_begin="20dp"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_preview_end"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintGuide_end="20dp"/>

                <TextView
                    android:id="@+id/preview_gifticon_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:textAppearance="@style/Text.Title5"
                    android:textColor="@color/font_dark_gray"
                    android:text="@string/editor_preview_gifticon_info"/>

                <ImageView
                    android:id="@+id/preview_gifticon_thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_info"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/preview_gifticon_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_thumbnail"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:textAppearance="@style/Text.Body5"
                    android:textColor="@color/font_gray"
                    android:text="@string/editor_preview_gifticon_name"/>

                <TextView
                    android:id="@+id/preview_gifticon_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    app:layout_constraintEnd_toEndOf="@id/guide_preview_end"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_name_label"
                    android:lines="1"
                    android:textAppearance="@style/Text.Body1"
                    android:textColor="@color/font_dark_gray"
                    tools:text="스타벅스 아메리카노"/>

                <ImageView
                    android:id="@+id/preview_gifticon_name_empty"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="@id/preview_gifticon_name_label"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_name_label"
                    android:visibility="invisible"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_empty_info"/>

                <TextView
                    android:id="@+id/preview_gifticon_brand_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_name"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:textAppearance="@style/Text.Body5"
                    android:textColor="@color/font_gray"
                    android:text="@string/editor_preview_gifticon_brand"/>

                <TextView
                    android:id="@+id/preview_gifticon_brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    app:layout_constraintEnd_toEndOf="@id/guide_preview_end"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_brand_label"
                    android:lines="1"
                    android:textAppearance="@style/Text.Body1"
                    android:textColor="@color/font_dark_gray"
                    tools:text="스타벅스"/>

                <ImageView
                    android:id="@+id/preview_gifticon_brand_empty"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="@id/preview_gifticon_brand_label"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_brand_label"
                    android:visibility="invisible"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_empty_info"/>

                <TextView
                    android:id="@+id/preview_gifticon_expired_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_brand"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:textAppearance="@style/Text.Body5"
                    android:textColor="@color/font_gray"
                    android:text="@string/editor_preview_gifticon_expired"/>

                <TextView
                    android:id="@+id/preview_gifticon_expired"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    app:layout_constraintEnd_toEndOf="@id/guide_preview_end"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_expired_label"
                    android:lines="1"
                    android:textAppearance="@style/Text.Body1"
                    android:textColor="@color/font_dark_gray"
                    tools:text="2021-11-06"/>

                <ImageView
                    android:id="@+id/preview_gifticon_expired_empty"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="@id/preview_gifticon_expired_label"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_expired_label"
                    android:visibility="invisible"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_empty_info"/>

                <TextView
                    android:id="@+id/preview_gifticon_memo_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_expired"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    android:textAppearance="@style/Text.Body5"
                    android:textColor="@color/font_gray"
                    android:text="@string/editor_preview_gifticon_memo"/>

                <TextView
                    android:id="@+id/preview_editor_memo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="44dp"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/preview_gifticon_memo_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guide_preview_start"
                    app:layout_constraintEnd_toEndOf="@id/guide_preview_end"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rect_r8_gray_l1"
                    tools:text="글자글자를글자글자를글자글자를글자글자를"/>

                <TextView
                    android:id="@+id/preview_editor_memo_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="@id/preview_editor_memo"
                    app:layout_constraintBottom_toBottomOf="@id/preview_editor_memo"
                    android:textAppearance="@style/Text.Body5"
                    android:textColor="@color/font_gray"
                    tools:text="0/20"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <com.lighthouse.beep.ui.designsystem.cropview.CropImageView
        android:id="@+id/crop_gifticon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/list_selected"
        app:layout_constraintBottom_toTopOf="@id/list_editor_chip"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_editor_chip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:paddingStart="0dp"
        android:paddingEnd="24dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/recycler_editor"
        android:nestedScrollingEnabled="false"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_editor_property_chip"
        tools:itemCount="5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_preview"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:minWidth="34dp"
        android:padding="7dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_editor_chip"
        app:layout_constraintBottom_toBottomOf="@id/list_editor_chip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_editor_preview_chip">

        <TextView
            android:id="@+id/text_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="6dp"
            android:autoSizeTextType="none"
            app:layout_constraintStart_toEndOf="@id/icon_preview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:lines="1"
            android:textColor="@color/editor_preview_chip"
            android:textAppearance="@style/Text.Body1"
            android:text="@string/editor_gifticon_preview" />

        <ImageView
            android:id="@+id/icon_preview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"
            app:tint="@color/editor_preview_chip"
            android:src="@drawable/icon_preview"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/decoration"
        android:layout_width="12dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/list_editor_chip"
        app:layout_constraintBottom_toBottomOf="@id/list_editor_chip"
        app:layout_constraintStart_toEndOf="@id/btn_preview"
        android:background="@drawable/editor_property_chip_decoration"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_editor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/section_editor_preview"
        tools:itemCount="1"/>
    
    <TextView
        android:id="@+id/btn_register"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:backgroundTint="@color/bg_editor_register"
        android:background="@drawable/bg_rect_r16"
        android:textColor="@color/white"
        android:textAppearance="@style/Text.Title5"
        android:text="@string/editor_gifticon_register_invalid"/>
</androidx.constraintlayout.widget.ConstraintLayout>