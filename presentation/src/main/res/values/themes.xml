<resources>

    <style name="Theme.BEEP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/beep_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/beep_pink</item>
        <item name="materialButtonStyle">@style/BEEP.Component.Button</item>
    </style>

    <style name="Theme.BEEP.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/beep_pink</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_beep</item>
        <item name="postSplashScreenTheme">@style/Theme.BEEP</item>
    </style>
</resources>