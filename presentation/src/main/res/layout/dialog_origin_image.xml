<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.lighthouse.presentation.ui.addgifticon.dialog.OriginImageViewModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> vm.dismiss()}">

        <ImageView
            android:id="@+id/iv_origin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/origin_image_description"
            android:scaleType="fitCenter"
            app:loadUri="@{vm.originUri}" />
    </FrameLayout>
</layout>