<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <size
                android:width="32dp"
                android:height="16dp"/>

            <corners
                android:radius="16dp"/>

            <solid
                android:color="@color/medium_pink"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <size
                android:width="32dp"
                android:height="16dp"/>

            <corners
                android:radius="16dp"/>

            <solid
                android:color="@color/gray"/>
        </shape>
    </item>
</selector>