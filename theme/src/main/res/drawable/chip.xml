<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">

        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/beep_pink"
                android:width="1.5dp"/>

            <corners
                android:radius="30dp"/>

            <solid
                android:color="#FFF4F7"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/light_gray"
                android:width="1.5dp"/>

            <corners
                android:radius="30dp"/>

            <solid
                android:color="@color/bg"/>
        </shape>
    </item>

</selector>